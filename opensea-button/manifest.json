{
    "manifest_version": 3,
    "name": "OpenSea Button",
    "description": "Adds a button on Etherscan and Polygonscan linking to OpenSea",
    "version": "1.0.0",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://etherscan.io/address/*",
                "*://etherscan.io/token/*",
                "*://polygonscan.com/address/*",
                "*://polygonscan.com/token/*"
            ],
            "js": [
                "opensea-button.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://etherscan.io/*",
                "*://polygonscan.com/*"
            ],
            "resources": [
                "opensea-logo.svg"
            ]
        }
    ]
}
